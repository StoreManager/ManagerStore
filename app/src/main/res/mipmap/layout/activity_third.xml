<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#444682"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="30"
        android:background="#525491">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="16dp"
            android:text="账户注册"

            android:textColor="#EFEFEF"
            android:gravity="center"/>
    </LinearLayout>
//
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:gravity="center_horizontal|bottom">

        <TextView
            android:id="@+id/tv_inputpw"
            android:layout_width="250dp"
            android:layout_height="30dp"

            android:text="请输入身份证号（作为账号登录）："
            android:textColor="#EFEFEF"
            android:textSize="15dp"/>

        <EditText
            android:id="@+id/et_inputpw"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="身份证号码"
            android:background="@drawable/et_square"
            android:textColor="#EFEFEF"
            android:textSize="16dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center">

        <TextView

            android:layout_width="250dp"
            android:layout_height="30dp"

            android:text="邮箱："
            android:textColor="#EFEFEF"
            android:textSize="18dp"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="邮箱号码"
            android:background="@drawable/et_square"
            android:textColor="#EFEFEF"
            android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"

            android:text="请输入身份证绑定的银行卡："
            android:textColor="#EFEFEF"
            android:textSize="18dp"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="银行卡号"
            android:background="@drawable/et_square"
            android:textColor="#EFEFEF"
            android:textSize="16dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:text="请输入身份证绑定的银行卡："
            android:textColor="#EFEFEF"

            android:textSize="18dp"/>
        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:layout_width="130dp"
                    android:layout_height="90dp"

                    android:background="@mipmap/add_2x"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="正面"
                    android:textSize="18dp"
                    android:textColor="#ffff"
                    android:gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <Button
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/add_2x"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="反面"
                android:textSize="18dp"
                android:textColor="#ffff"
                android:gravity="center"
                />
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>



    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:alpha="30"
        android:text="提交"
        android:textColor="#EFEFEF"
        android:textSize="16sp"/>

</LinearLayout>