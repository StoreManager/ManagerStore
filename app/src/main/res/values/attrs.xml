<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TabPagerIndicator">
        <attr name="pstsIndicatorColor" format="color" />
        <attr name="pstsUnderlineColor" format="color" />
        <attr name="pstsDividerColor" format="color" />
        <attr name="pstsIndicatorHeight" format="dimension" />
        <attr name="pstsUnderlineHeight" format="dimension" />
        <attr name="pstsDividerPadding" format="dimension" />
        <attr name="pstsTabPaddingLeftRight" format="dimension" />
        <attr name="pstsScrollOffset" format="dimension" />
        <attr name="pstsTabBackground" format="reference" />
        <attr name="pstsShouldExpand" format="boolean" />
        <attr name="pstsTextAllCaps" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LineChart">
        <attr name="StrokeWidth" format="dimension"/>
        <attr name="FontSize" format="dimension"/>
        <attr name="PointRadius" format="dimension"/>
        <attr name="DarkColor" format="color"/>
        <attr name="LightColor" format="color"/>
        <attr name="DateTextColor" format="color"/>
        <attr name="ShapeColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="ZoomHoverView">
        <!--每行多少列-->
        <attr name="zhv_column_num" format="integer" />
        <!--分割线-->
        <attr name="zhv_divider" format="dimension" />
        <!--距离父控件的margin-->
        <attr name="zhv_margin_parent" format="dimension" />
        <!--动画持续时间-->
        <attr name="zhv_zoom_duration" format="integer" />
        <!--动画缩放的倍数-->
        <attr name="zhv_zoom_to" format="float" />
        <!--是否使用基础的宽高(ZoomHoverGridView使用)-->
        <attr name="zhv_use_baseWH" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ImageViewExtend">
        <attr name="shape" format="integer" />

        <attr name="border" format="boolean" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="rect_roundcorner" format="dimension" />

        <attr name="shadow" format="boolean" />
        <attr name="shadow_width" format="dimension" />
        <attr name="shadow_color_star" format="color" />
        <attr name="shadow_color_midd" format="color" />
        <attr name="shadow_color_end" format="color" />

    </declare-styleable>

</resources>