<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_item_project_manage">
            <Button
                android:id="@+id/btn_item_project_manage_classify_update"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:textColor="#4862af"
                android:textSize="12dp"
                android:background="@drawable/btn_checked_shadow"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="80dp"
                android:text="修改"/>
            <Button
                android:id="@+id/btn_item_project_manage_classify_delete"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:text="删除"
                android:textColor="#4862af"
                android:textSize="12dp"
                android:background="@drawable/btn_checked_shadow"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical|right"/>

            <TextView
                android:id="@+id/tv_item_project_manage_classify_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#000000"
                android:text="1人桌"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"/>
        </FrameLayout>




    </LinearLayout>

</LinearLayout>