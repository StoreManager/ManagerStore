<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTitle">
        <Button
        android:onClick="backAddRegisterStore"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:background="@mipmap/navigationbar_back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="注册店铺"
            android:textColor="@color/colorText"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="店铺名字"
            android:textColor="@color/white"/>
        <EditText
            android:background="@drawable/et_square"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:hint="请输入店铺的名字"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="店铺类型"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="200dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:background="@null"/>
            <Button
                android:onClick="chooseStoreStyle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:background="@mipmap/next_arrow_icon"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="店铺地址"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="200dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:background="@null"/>
            <Button
                android:onClick="chooseStoreAddress"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:background="@mipmap/next_arrow_icon"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="店铺联系电话"
            android:textColor="@color/white"/>
        <EditText
            android:background="@drawable/et_square"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:hint="请输入店铺的联系电话"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="店铺营业执照(请上传店铺营业执照照片)"
            android:textColor="@color/white"/>
        <Button
            android:onClick="businessLicense"
            android:layout_width="190dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@mipmap/add"/>

    </LinearLayout>
    <Button
        android:layout_marginTop="3dp"
        android:onClick="finishRegisterStore"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="完成"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        android:alpha="30"/>
</LinearLayout>
