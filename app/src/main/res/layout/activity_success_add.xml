<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="添加成功"
        android:gravity="center"
        android:textSize="22dp"
        android:textColor="#000"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="新员工账户信息"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="15dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray2"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="姓名    "
            android:gravity="right"
            android:textSize="15dp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="xxxxxxx"
            android:id="@+id/tv_success_emp_name"
            android:textSize="15dp"
            android:textColor="#000"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="账号    "
            android:gravity="right"
            android:textSize="15dp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="xxxxxxx"
            android:id="@+id/tv_success_emp_id"
            android:textSize="15dp"
            android:textColor="#000"/>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="密码    "
            android:gravity="right"
            android:textSize="15dp"
            android:textColor="#000"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="xxxxxxxx"
            android:id="@+id/tv_success_emp_psw"
            android:textSize="15dp"
            android:textColor="#000"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray2"
        android:layout_marginTop="5dp"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#00000000"
            android:text="继续添加"
            android:textSize="15dp"
            android:textColor="@color/purplishblue"/>
        <Button
            android:id="@+id/btn_back_to_employee_manage"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="返回员工管理"
            android:textSize="15dp"
            android:background="@color/purplishblue"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>