<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_addFood"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/layout_add_title"/>

        <ImageButton
            android:id="@+id/imgbtn_foodImg"

            android:background="@mipmap/addimage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="菜品名字:"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edit_foodName"
                android:layout_width="100dp"
                android:layout_marginLeft="15dp"
                android:textSize="13sp"
                android:layout_height="wrap_content"
                android:background="@drawable/editsharp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="菜品单价:"
                android:textSize="13sp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edit_foodPrice"
                android:numeric="integer"
                android:layout_width="100dp"
                android:textSize="13sp"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:background="@drawable/editsharp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="基本描述:"
                android:layout_marginTop="5dp"
                android:textSize="13sp"/>

            <EditText
                android:id="@+id/edit_foodDescription"
                android:layout_width="250dp"
                android:clickable="true"
                android:layout_marginTop="8dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/editsharp"
                android:gravity="start"
                android:hint="字数最多只有100呦"
                android:textSize="13sp"
                android:maxLength="100"/>

            <TextView
                android:id="@+id/tv_inputNumber"
                android:layout_width="wrap_content"
                android:layout_marginLeft="200dp"
                android:textSize="13sp"
                android:layout_height="wrap_content"
                android:text="还剩余100字数"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="60dp"
            android:layout_height="50dp">

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="完成"
                android:textColor="#fff"
                android:background="#7274ab"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>