<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:descendantFocusability="blocksDescendants"
    >
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:id="@+id/tv_registerStoreName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:text="storeName"
            android:textColor="@color/babyblue"
            android:textSize="16sp"
            />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/tv_registerStoreName"
            android:id="@+id/tv_isRelease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="未发布"
            android:textColor="#aea4a2"
            android:textSize="12sp"/>

        <Button
            android:layout_marginTop="2.5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_registerStoreManage"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/storestyle_btn"
            android:text="管理"
            android:textSize="10sp"
            />
</RelativeLayout>