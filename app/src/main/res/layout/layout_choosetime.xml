<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_reg"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="00dp"
        android:layout_weight="2"
        android:orientation="horizontal"/>


    <LinearLayout
        android:id="@+id/ll_registertime"
        android:layout_width="match_parent"
        android:layout_height="00dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">



        </RelativeLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="160dp"
            android:gravity="center"
            android:orientation="horizontal">


            <com.cottee.managerstore.wheelwidget.WheelView
                android:id="@+id/wv_year"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="2" />

            <com.cottee.managerstore.wheelwidget.WheelView
                android:id="@+id/wv_month"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="3" />

            <!--<com.cottee.mycarsmessages.wheelwidget.WheelView-->
                <!--android:id="@+id/wv_day"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:layout_weight="4" />-->
        </LinearLayout>

    </LinearLayout>

</LinearLayout>