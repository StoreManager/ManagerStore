<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/purplishblue">

        <Button
            android:layout_width="20dp"
            android:id="@+id/btn_back_to_emp"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_horizontal"
            android:background="@mipmap/back_2x"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="16sp"
            android:text="修改员工密码"
            android:textColor="@color/white"
            android:gravity="center"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:text="新密码："
            android:textColor="@color/babyblue"
            android:textSize="15sp"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="请输入新密码"
            android:digits="@string/filter_number_code"
            android:id="@+id/et_input_new_emp_pwd"
            android:background="@drawable/et_square"
            android:inputType="textPassword"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:text="确认新密码："
            android:textColor="@color/babyblue"
            android:textSize="15sp"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="请再次确认密码"
            android:digits="@string/filter_number_code"
            android:id="@+id/et_again_input_emp_pwd"
            android:background="@drawable/et_square"
            android:inputType="textPassword"
            android:textSize="13sp"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="注：# ￥ %等非法字符不能设为密码!"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:textColor="#ff0000"
            android:textSize="13sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="1">
        <Button
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:text="提交"
            android:id="@+id/bt_input_emp_pass"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:background="@drawable/bt_unchecked_login"/>
    </LinearLayout>
</LinearLayout>