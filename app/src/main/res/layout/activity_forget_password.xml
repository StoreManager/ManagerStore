<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/purplishblue">

        <Button
            android:layout_width="20dp"
            android:id="@+id/btn_forget_back_to_forgetemail"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_horizontal"
            android:background="@mipmap/back_2x"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="16sp"
            android:text="忘记密码"

            android:textColor="#EFEFEF"
            android:gravity="center"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:gravity="center">

        <TextView

            android:layout_width="250dp"
            android:layout_height="30dp"

            android:text="新密码："
            android:textColor="@color/babyblue"
            android:textSize="16sp"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:digits="@string/filter_number_code"
            android:id="@+id/et_forget_input_pwd"
            android:background="@drawable/et_square"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:text="确认密码："
            android:textColor="@color/babyblue"
            android:textSize="16sp"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="请再次确认密码"
            android:digits="@string/filter_number_code"
            android:id="@+id/et_forget_again_input_pwd"
            android:background="@drawable/et_square"
            android:inputType="textPassword"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="注：# ￥ %等非法字符不能设为密码!"
            android:gravity="center_vertical"
            android:textColor="#ff0000"
            android:layout_marginTop="10dp"
            android:textSize="13dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:text="完成"
            android:alpha="30"
            android:id="@+id/btn_forget_finish"
            android:textColor="#ffff"
            android:textSize="16dp"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/bt_login"/>
    </LinearLayout>





</LinearLayout>