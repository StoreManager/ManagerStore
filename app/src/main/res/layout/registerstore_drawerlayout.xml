            <!--android:layout_gravity="right"/>-->
<TextView
    android:gravity="center"
    android:visibility="visible"
    android:id="@+id/tv_noStore"
    android:text="快去添加你的店铺吧"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>


        <ListView
            android:visibility="gone"
            android:id="@+id/lv_registerStore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="1dp"
            android:scrollbars="none"/>
    </LinearLayout>
    <!--侧滑菜单-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sky_blue"
        android:layout_gravity="start">

        <LinearLayout
            android:id="@+id/linear_changePassword"
           android:clickable="true"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="修改密码"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:background="@color/pea_green" />


        <LinearLayout
            android:id="@+id/linear_helpCenter"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="帮助中心"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:background="@color/pea_green" />

        <LinearLayout
            android:id="@+id/linear_feedbackProblem"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/tv_feedbackProblem"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="反馈问题"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:background="@color/pea_green" />
        <LinearLayout
            android:id="@+id/linear_exitLogin"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="退出登录"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:background="@color/pea_green" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>