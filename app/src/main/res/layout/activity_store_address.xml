<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StoreAddressActivity">

    <Button
        android:layout_marginRight="25dp"
        android:layout_marginTop="31dp"
        android:id="@+id/btn_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toLeftOf="@id/bt_search"
        android:background="@mipmap/back_2x"/>
    <Button
        android:id="@+id/bt_search"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@drawable/et_square"
        android:hint="搜索"
        android:textColorHint="@color/blueGray"
        android:textSize="10sp"/>
    <com.tencent.tencentmap.mapsdk.map.MapView
        android:layout_marginTop="10dp"
        android:layout_below="@id/bt_search"
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mapview"
        android:gravity="center"
        android:text="地址"
        android:textColor="@color/blueGray"
        android:textSize="16sp"/>

    <Button
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/storestyle_btn"
        android:id="@+id/btn_checkout"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="确认位置"
        android:textColor="@color/babyblue"
        android:textSize="16sp"/>
</RelativeLayout>