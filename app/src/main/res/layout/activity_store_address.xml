<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StoreAddressActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/purplishblue">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:background="@mipmap/back_2x"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="店铺位置"
            android:textColor="@color/colorText"
            android:textSize="16sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/bt_search"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_above="@+id/mapview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/et_square"
        android:hint="搜索"
        android:textColorHint="@color/blueGray"
        android:textSize="10sp"/>
    <com.tencent.tencentmap.mapsdk.map.MapView
        android:id="@+id/mapview"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mapview"
        android:gravity="center"
        android:text="地址"
        android:textColor="@color/blueGray"
        android:textSize="16sp"/>

    <Button
        android:background="@drawable/bt_unchecked_login"
        android:id="@+id/btn_checkout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:text="确认位置"
        android:textColor="@color/white"
        android:textSize="13sp"/>
</RelativeLayout>