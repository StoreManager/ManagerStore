<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:background="@color/white"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/purplishblue">

        <Button
            android:layout_width="20dp"
            android:id="@+id/btn_back_to_loginregister"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_horizontal"
            android:background="@mipmap/back_2x"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="16dp"
            android:text="账户注册"

            android:textColor="#EFEFEF"
            android:gravity="center"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center">

        <TextView

            android:layout_width="250dp"
            android:layout_height="30dp"

            android:text="邮箱："
            android:textColor="@color/babyblue"
            android:textSize="18sp"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:hint="请输入邮箱号码"
            android:background="@drawable/et_square"
            android:id="@+id/et_input_email_address"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:text="验证码："
            android:textColor="@color/babyblue"
            android:textSize="18dp"/>
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="10"
                android:hint="请输入收到的验证码"
                android:id="@+id/et_input_authentication_code"
                android:background="@drawable/et_square"
                android:textSize="13sp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:id="@+id/btn_get_authentication_code"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/btn_var_square"
                android:text="获取验证码"
                android:textSize="12dp"
                android:textColor="@color/white"/>
        </LinearLayout>


    </LinearLayout>





    <Button
        android:id="@+id/btn_email_next"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:background="@drawable/bt_unchecked_login"
        android:text="下一步"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        />

</LinearLayout>