<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purplishblue">

        <Button
            android:id="@+id/btn_backs"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@mipmap/back_2x"
            android:gravity="center_horizontal"/>

        <Button
            android:layout_centerVertical="true"
            android:id="@+id/btn_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/edit"
            android:onClick="edit"/>

        <Button
            android:layout_centerVertical="true"
            android:id="@+id/btn_save"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/save"
            android:onClick="save"
            android:visibility="gone"/>

    </RelativeLayout>
        <com.cottee.managerstore.view.ZoomInScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/detial_layout"/>
        </com.cottee.managerstore.view.ZoomInScrollView>
</LinearLayout>
