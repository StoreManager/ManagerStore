<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"

            android:background="@mipmap/logo"
            android:gravity="center"
            />
        <TextView
        android:text="Sweet（员工）"
        android:layout_marginTop="5dp"
        android:textSize="19sp"
        android:textColor="@color/babyblue"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_horizontal">
            <View
                android:layout_marginTop="1dp"
                android:layout_width="150dp"
                android:layout_height="6dp"
                android:background="#ffffff"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="账号:"
                android:textColor="@color/babyblue"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_weight="3"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="8"
                android:background="@null"
                android:textSize="12sp"
                android:id="@+id/et_emp_login_account"
                android:hint="请输入账号"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="密码:"
                android:layout_marginTop="40dp"
                android:textColor="@color/babyblue"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_weight="3"/>
            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="8"
                android:background="@null"
                android:layout_marginTop="40dp"
                android:id="@+id/et_emp_login_password"
                android:hint="请输入密码"
                android:textSize="12sp"
                android:inputType="textPassword"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorText" />



        <Button
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:background="@drawable/bt_unchecked_login"
            android:layout_marginTop="90dp"
            android:text="登录"
            android:id="@+id/btn_emp_login"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_back_to_main"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="#00000000"
            android:textSize="16dp"
            android:text="返回"
            android:textColor="@color/purplishblue"/>


    </LinearLayout>


</LinearLayout>